          <image src="https://file.zwyknit.com/%E5%BE%AE%E4%BF%A1%E5%9B%BE%E7%89%87_20220216112643.png"></image>
          <view class="mt20">暂无客户，请扫码绑定客户</view>
        </view>
      </view>
    </block>
    <block wx:else>
      <list-card cardInfoData="{{cardInfoData}}"></list-card>
    </block>
  </t-tab-panel>
</t-tabs>