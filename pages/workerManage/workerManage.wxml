<!--pages/workerManage/workerManage.wxml-->
<view class="container">
  <view wx:if="{{isLeader}}" class="bg vw100 vh100">
    <list-card  bind:clickLine="getName" cardInfoData="{{cardInfoData}}"></list-card>
    <view class="mt30 color91 tc fz30">
      新员工需扫作坊主二维码才能添加到组织
    </view>
    <view class="vw90 mt20 submit ma">
      <t-button theme="primary" size="large" variant="plain" bindtap="addWorkrManage">添加员工</t-button>
    </view>
    <t-dialog
      visible="{{isOpenAddWorkerWin}}"
      t-class-confirm="{{dialogConfig.tConfirmBtn}}"
      title="{{dialogConfig.title}}"
      content="{{dialogConfig.content}}"
      confirm-btn="{{dialogConfig.confirmBtn}}"
      cancel-btn="{{dialogConfig.cancelBtn}}"
      button-layout="{{dialogConfig.buttonLayout}}"
      actions="{{dialogConfig.actions}}"
      bind:confirm="confirmHandle"
      bind:cancel="closeHandle"
    >
      <scroll-view
