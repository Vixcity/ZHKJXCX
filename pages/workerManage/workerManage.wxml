        </view>
      </scroll-view>
      <input
        wx:if="{{useSlot}}"
        slot="content"
        placeholder="员工姓名"
        bindinput="workerName"
        placeholder-class="placeholder"
        style="border: 1px solid #919191;"
        class="pl10 pt5 pb5 borderRadius16 mt10"
      />
    </t-dialog>
  </view>
  <view wx:else class="tc mt40">
    暂无员工，请成为作坊主添加员工
  </view>
  <t-message id="t-message" />
</view>
