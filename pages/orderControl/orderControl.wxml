<!--index.wxml-->
<view class="container">
  <t-tabs value="{{0}}" bind:change="onTabsChange">
    <t-tab-panel label="全部" value="0">
      <block wx:if="{{!isLeader}}">
        <view class="vh90 flex aic jcc">
          空数据页
        </view>
      </block>
      <block wx:else>
        <view class="pb20">
          <order-card wx:for="{{4}}" detailInfo="{{detailInfo}}" showPrice="{{true}}"></order-card>
        </view>
      </block>
    </t-tab-panel>
    <t-tab-panel label="待定价" value="1">
      <block wx:if="{{!isLeader}}">
        <view class="vh90 flex aic jcc">
          空数据页
        </view>
      </block>
      <block wx:else>
        <view class="pb20">
          <order-card wx:for="{{3}}" detailInfo="{{detailInfo}}" showPrice="{{true}}"></order-card>
        </view>
      </block>
    </t-tab-panel>
    <t-tab-panel label="生产中" value="2">
      <block wx:if="{{!isLeader}}">
        <view class="vh90 flex aic jcc">
          空数据页
        </view>
      </block>
      <block wx:else>
        <view class="pb20">
          <order-card wx:for="{{2}}" detailInfo="{{detailInfo}}" showPrice="{{true}}"></order-card>
        </view>
      </block>
    </t-tab-panel>
    <t-tab-panel label="已完成" value="3">
      <block wx:if="{{!isLeader}}">
        <view class="vh90 flex aic jcc">
          空数据页
        </view>
      </block>
      <block wx:else>
        <view class="pb20">
          <order-card wx:for="{{1}}" detailInfo="{{detailInfo}}" showPrice="{{true}}"></order-card>
        </view>
      </block>
    </t-tab-panel>
  </t-tabs>
</view>