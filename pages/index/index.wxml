<!--index.wxml-->
<view class="container">
  <view class="bg w100 {{orderList.length === 0?'vh100':'h100'}}">
    <!-- 卡片列表 -->
    <order-card bindtap="toOutPutEntry" bind:changeShow="changeShow" showChangeIcon="{{true}}" wx:for="{{orderList}}" wx:for-item="item" wx:key="item" wx:for-index="index" data-index="{{index}}" detailInfo="{{item}}"></order-card>

    <!-- 懒加载 -->
    <view class="tc color91 mt20 mb20" hidden='{{!isShowLoadmore}}'>
      <t-loading theme="spinner" size="40rpx" loading text="加载中..." hidden='{{!isShowLoadmore}}'></t-loading>
    </view>
    <view class="tc color91 mt20 mb20" hidden='{{!isShowNoDatasTips}}'>
      <view>暂无更多数据</view>
    </view>
  </view>
  <t-dialog title="注册账号" content="您还未注册账号，请点击前往注册" confirm-btn="点击注册" visible="{{showDialog}}" bind:confirm="toSingUp"/>
  <t-dialog title="登录" content="您还未登录，点击前往登录" confirm-btn="点击登录" visible="{{showLogin}}" bind:confirm="toNoLogin"/>
  <t-message id="t-message" />
</view>